#include  "../header/api.h"    		// private library - API layer
#include  "../header/halGPIO.h"     // private library - HAL layer

void Manual_Sleep(void){
    enterLPM();
}

void Joystick_Control(void){
    unsigned int pos;
    unsigned int xSampled;
    unsigned int ySampled;
    while(state = Joystick_Control){
        sampleJoyStick(&xSampled , &ySampled); //returning the ADC values for X and Y Axis
        calcDirection(xSampled , ySampled , )
    }
}
